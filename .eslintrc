{
  'env': {
    'browser': true,
    'commonjs': true,
    'es6': true,
    'node': true
  },
  "extends": "eslint-config-airbnb-es5",
  "parserOptions": {
    'sourceType': 'module'
  },
  'rules': {
    'semi': ['error','always'],
    // set max code line length to 120
    'max-len': [1, 120, 2, {'ignoreComments': true} ],
    // do not enforce quotes for object keys
    'quote-props': [1, 'consistent-as-needed'],
    // safeguard from accidental use of = instead of === within conditions
    'no-cond-assign': [2, 'except-parens'],
    'radix': 0,
    'space-infix-ops': 0,
    'no-unused-vars': [1, {'vars': 'local', 'args': 'none'}],
    // warn, but do not error, on console logs (should be removed for production)
    'no-console': 1,
    'default-case': 0,
    'no-else-return': 0,
    'no-param-reassign': 0,
    'quotes': 0,
    'padded-blocks': 0,
    'no-undef': 0,
    'angular/log': 0,
    'func-names': 0,
    'no-path-concat': 0
  }
}
